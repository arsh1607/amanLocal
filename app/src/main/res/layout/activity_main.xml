<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >



    <Button
        android:visibility="gone"
        android:id="@+id/btnMainUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/btnbg"
        android:padding="10dp"
        android:text="@string/get_user_info"

        android:textColor="@android:color/white" />

    <Button
        android:visibility="gone"
        android:layout_below="@+id/btnMainUserInfo"
        android:id="@+id/btnMainFriendList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/btnbg"
        android:padding="10dp"
        android:text="@string/user_friend_list"

        android:textColor="@android:color/white" />
    <Button
        android:visibility="gone"
        android:layout_below="@+id/btnMainFriendList"
        android:id="@+id/btnfblogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/btnbg"
        android:padding="10dp"
        android:text="@string/facebook_logout"

        android:textColor="@android:color/white" />

    <Button
        android:visibility="gone"
        android:layout_below="@+id/btnfblogout"
        android:id="@+id/btngoogle_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/btnbg"
        android:padding="10dp"
        android:text="@string/google_plus"

        android:textColor="@android:color/white" />
    <Button
        android:visibility="gone"
        android:layout_below="@+id/btngoogle_plus"
        android:id="@+id/btn_linkedin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/btnbg"
        android:padding="10dp"
        android:text="Linked In"

        android:textColor="@android:color/white" />

    <Button
        android:layout_below="@+id/btngoogle_plus"
        android:id="@+id/btn_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/btnbg"
        android:padding="10dp"
        android:text="Twitter"

        android:textColor="@android:color/white" />

    <Button
        android:visibility="gone"
        android:layout_below="@+id/btngoogle_plus"
        android:id="@+id/btn_twitterinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/btnbg"
        android:padding="10dp"
        android:text="Twitterinfo"

        android:textColor="@android:color/white" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/display"/>
</LinearLayout>